<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/base">

    <WebView android:id="@+id/web_view" android:layout_width="match_parent" android:layout_height="match_parent"/>

    <ProgressBar android:id="@+id/web_pb" android:layout_width="match_parent" android:layout_height="3dp"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:progressDrawable="@drawable/web_browser_progress_selector"/>

    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/listView" android:visibility="gone"/>

    <ImageView android:id="@+id/down_360" android:layout_width="200dp" android:layout_height="100dp"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:layout_marginBottom="2dp"
            android:src="@drawable/zs360" android:visibility="gone"/>

</RelativeLayout>