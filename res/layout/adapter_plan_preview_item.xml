<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/adapter_plan_preview_item">

    <ImageView android:layout_width="60dp" android:layout_height="60dp"
               android:layout_centerVertical="true" android:id="@+id/icon" android:layout_marginLeft="6dp"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/icon" android:layout_marginLeft="12dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/name" android:textColor="@color/white" android:textSize="15sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/count" android:textColor="@color/white" android:textSize="14sp"/>
    </LinearLayout>
    <ImageView android:id="@+id/flag" android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:src="@drawable/preview_icon_preview" android:layout_alignParentRight="true"
               android:layout_marginRight="20dp"/>

</RelativeLayout>